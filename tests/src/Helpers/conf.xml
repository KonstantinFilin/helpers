<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.0/phpunit.xsd"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         forceCoversAnnotation="false"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         bootstrap="/var/www/github/helpers/vendor/autoload.php"
>
    <testsuites>
        <testsuite name="Basic">
            <directory>/var/www/github/helpers/tests/src/Helpers</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">/var/www/github/helpers/src/Helpers</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html"
             target="/var/www/github/helpers/_Coverage"
        />
<log type="coverage-html" target="/var/www/github/helpers/_Coverage" lowUpperBound="35"
       highLowerBound="90"/>
    </logging>
</phpunit>
